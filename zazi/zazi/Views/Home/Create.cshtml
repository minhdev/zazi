@model zazi.Models.NoteEntry

@{
    ViewBag.Title = "add note";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>add note</h4></div>
    <div class="panel-body">
        <h2>add note</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class ="form-group">
                <label>content:</label>
                @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="shoutii" />
            </div>
        }
    </div>
</div>  
        
            
        
